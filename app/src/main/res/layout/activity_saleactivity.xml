<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".saleactivity">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:cardElevation="@dimen/_11sdp"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
        <ImageView
            android:id="@+id/backbtn"
            android:layout_width="@dimen/_34sdp"
            android:layout_height="@dimen/_55sdp"
            android:src="@drawable/baseline_arrow_back_24"
            android:layout_marginStart="@dimen/_3sdp"
            />
       <TextView
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:text="SALE"
           android:gravity="center"
           android:textSize="@dimen/_33sdp"
           android:textColor="@color/backclr"
           android:textStyle="bold"
           />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter the product Details"
        android:textSize="@dimen/_21sdp"
        android:layout_marginStart="@dimen/_11sdp"
        android:layout_marginEnd="@dimen/_11sdp"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/_12sdp"
        android:textColor="@color/textcl"
        />
  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/_13sdp"
      >
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          >
      <androidx.cardview.widget.CardView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          app:cardElevation="@dimen/_11sdp"
          app:cardCornerRadius="@dimen/_8sdp"
          android:layout_marginBottom="@dimen/_41sdp"
          android:layout_marginStart="@dimen/_11sdp"
          android:layout_marginEnd="@dimen/_11sdp"
          >
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              >
          <com.google.android.material.textfield.TextInputLayout
              android:id="@+id/prolay"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_margin="@dimen/_10sdp"
              app:boxCornerRadiusBottomStart="30dp"
              app:boxCornerRadiusBottomEnd="30dp"
             >
              <com.google.android.material.textfield.TextInputEditText
                  android:id="@+id/productname"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:hint="*Product name"
                  />
          </com.google.android.material.textfield.TextInputLayout>
              <TextView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="*The type of the product is"
                  android:textSize="@dimen/_12sdp"
                  android:layout_marginStart="@dimen/_10sdp"
                  android:textColor="@color/purple_500"
                  />
              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:layout_marginStart="@dimen/_7sdp"
                  >
                  <RadioGroup
                      android:id="@+id/Radiogrp"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      >
                <RadioButton
                    android:id="@+id/rgrp1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Electronics"
                    />
                  <RadioButton
                      android:id="@+id/rgrp2"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Others"
                      />
                  </RadioGroup>
              </LinearLayout>
          <com.google.android.material.textfield.TextInputLayout
              android:id="@+id/relay"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_margin="10dp"
              app:boxCornerRadiusBottomStart="30dp"
              app:boxCornerRadiusBottomEnd="30dp"
              >
              <com.google.android.material.textfield.TextInputEditText
                  android:id="@+id/rent"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:inputType="number"
                  android:hint="*Rent"
                  />
          </com.google.android.material.textfield.TextInputLayout>
              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  >
              <com.google.android.material.textfield.TextInputLayout
                  android:id="@+id/dtelay"
                  android:layout_width="@dimen/_231sdp"
                  android:layout_height="wrap_content"
                  android:layout_margin="10dp"
                  app:boxCornerRadiusBottomStart="30dp"
                  app:boxCornerRadiusBottomEnd="30dp"
                  >
                  <com.google.android.material.textfield.TextInputEditText
                      android:id="@+id/dateEditText"
                      android:layout_width="@dimen/_231sdp"
                      android:layout_height="wrap_content"
                      android:inputType="date"
                      android:hint="*Date of bought"
                      />
              </com.google.android.material.textfield.TextInputLayout>
                  <ImageView
                      android:id="@+id/calernderimg"
                      android:layout_width="@dimen/_28sdp"
                      android:layout_height="@dimen/_28sdp"
                      android:layout_gravity="center"
                      android:src="@drawable/baseline_calendar_month_24"
                      />
              </LinearLayout>
              <com.google.android.material.textfield.TextInputLayout
                  android:id="@+id/phlay"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_margin="10dp"
                  app:boxCornerRadiusBottomStart="30dp"
                  app:boxCornerRadiusBottomEnd="30dp"
                  >
                  <com.google.android.material.textfield.TextInputEditText
                      android:id="@+id/phnumber"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:inputType="phone"
                      android:hint="*Enter your phone number"
                      />
              </com.google.android.material.textfield.TextInputLayout>
              <com.google.android.material.textfield.TextInputLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_margin="10dp"
                  app:boxCornerRadiusBottomStart="30dp"
                  app:boxCornerRadiusBottomEnd="30dp"
                  >
                  <com.google.android.material.textfield.TextInputEditText
                      android:id="@+id/Reasonsale"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:hint="why you want to sale it"
                      />
              </com.google.android.material.textfield.TextInputLayout>
              <com.google.android.material.textfield.TextInputLayout
                  android:id="@+id/detlay"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_margin="10dp"
                  app:boxCornerRadiusBottomStart="30dp"
                  app:boxCornerRadiusBottomEnd="30dp"
                  >
                  <com.google.android.material.textfield.TextInputEditText
                      android:id="@+id/detals"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:hint="*Details of the product"
                      />
              </com.google.android.material.textfield.TextInputLayout>
              <TextView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="*Upload the picture of the product"
                  android:textSize="@dimen/_13sdp"
                  android:layout_marginStart="@dimen/_10sdp"
                  android:textColor="@color/teal_200"
                  />
              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:layout_marginStart="@dimen/_11sdp"
                  >
              <ImageView
                  android:id="@+id/frontpic"
                  android:layout_width="@dimen/_31sdp"
                  android:layout_height="@dimen/_31sdp"
                  android:src="@drawable/baseline_picture_in_picture_24"

                  />
                  <Button
                      android:id="@+id/ftntupload"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Front side/Upload"
                      android:textColor="@color/black"
                      android:textStyle="bold"
                      android:textSize="@dimen/_19sdp"
                      android:layout_gravity="center"
                      android:layout_marginStart="@dimen/_11sdp"
                      />
                  <ProgressBar
                      android:id="@+id/proges1"
                      android:layout_width="@dimen/_25sdp"
                      android:layout_height="@dimen/_25sdp"
                      android:layout_gravity="center"
                      />
              </LinearLayout>
              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:layout_marginStart="@dimen/_11sdp"
                  >
                  <ImageView
                      android:id="@+id/backpic"
                      android:layout_width="@dimen/_31sdp"
                      android:layout_height="@dimen/_31sdp"
                      android:src="@drawable/baseline_picture_in_picture_24"

                      />
                  <Button
                      android:id="@+id/bckupload"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Back side/Upload"
                      android:textColor="@color/black"
                      android:textStyle="bold"
                      android:textSize="@dimen/_19sdp"
                      android:layout_gravity="center"
                      android:layout_marginStart="@dimen/_11sdp"
                      />
                  <ProgressBar
                      android:id="@+id/proges2"
                      android:layout_width="@dimen/_25sdp"
                      android:layout_height="@dimen/_25sdp"
                      android:layout_gravity="center"
                      />
              </LinearLayout>
              <LinearLayout
                  android:layout_marginTop="@dimen/_11sdp"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:layout_marginStart="@dimen/_11sdp"
                  >
                  <CheckBox
                      android:id="@+id/checkBox"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="I agree the term and condition"
                      />
              </LinearLayout>
              <Button
                  android:id="@+id/sbtbtn"
                  android:layout_marginTop="@dimen/_15sdp"
                  android:layout_marginBottom="@dimen/_11sdp"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="SUBMIT"
                  android:textColor="@color/white"
                  android:textSize="@dimen/_21sdp"
                  android:backgroundTint="@color/teal_200"
                  />
          </LinearLayout>

      </androidx.cardview.widget.CardView>
      </LinearLayout>
  </ScrollView>
</LinearLayout>