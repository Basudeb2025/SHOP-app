<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".Sign_up">

    <ImageView
        android:layout_marginTop="@dimen/_11sdp"
        android:layout_width="@dimen/_91sdp"
        android:layout_height="@dimen/_91sdp"
        android:src="@drawable/shop"
        android:layout_gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />
    <TextView
        android:layout_marginTop="@dimen/_21sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create your Account"
        android:textSize="@dimen/_21sdp"
        android:textStyle="bold"
        android:textColor="@color/textcl"
        android:layout_marginStart="@dimen/_17sdp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_260sdp"
        android:layout_marginTop="@dimen/_11sdp"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        >
        <androidx.cardview.widget.CardView
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="match_parent"
            app:cardBackgroundColor="@color/white"
            android:layout_height="@dimen/_42sdp"
            app:cardCornerRadius="@dimen/_8sdp"
            app:cardElevation="@dimen/_11sdp"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_6sdp"
            >
            <EditText
                android:id="@+id/Name_sign_Up"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:paddingLeft="@dimen/_11sdp"
                android:layout_gravity="center"
                android:hint="Name"
                android:textColorHint="@color/Dark_grey"
                android:textColor="@color/black"
                android:background="@android:color/transparent"
                />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_width="match_parent"
            app:cardBackgroundColor="@color/white"
            android:layout_height="@dimen/_42sdp"
            app:cardCornerRadius="@dimen/_8sdp"
            app:cardElevation="@dimen/_11sdp"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_6sdp"
            >
            <EditText
                android:id="@+id/Email_sign_up"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:paddingLeft="@dimen/_11sdp"
                android:layout_gravity="center"
                android:inputType="textEmailAddress"
                android:hint="Email"
                android:textColorHint="@color/Dark_grey"
                android:textColor="@color/black"
                android:background="@android:color/transparent"
                />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_42sdp"
            app:cardCornerRadius="@dimen/_8sdp"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="@dimen/_11sdp"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_6sdp"
            >
            <EditText
                android:id="@+id/password_sign_up"
                android:layout_width="match_parent"
                android:inputType="textPassword"
                android:layout_height="@dimen/_40sdp"
                android:paddingLeft="@dimen/_11sdp"
                android:layout_gravity="center"
                android:hint="Password"
                android:textColorHint="@color/Dark_grey"
                android:textColor="@color/black"
                android:background="@android:color/transparent"
                />
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_90sdp"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/warning"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*Password will must contain atleast one digit,one speacial char and 4 length"
                android:textSize="@dimen/_11sdp"
                android:layout_marginStart="@dimen/_14sdp"
                android:textStyle="bold"
                android:textColor="@color/black"
                />
        <androidx.cardview.widget.CardView
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_width="match_parent"
            app:cardBackgroundColor="@color/purple_700"
            android:layout_height="@dimen/_52sdp"
            app:cardCornerRadius="@dimen/_8sdp"
            app:cardElevation="@dimen/_11sdp"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_6sdp"
            >
            <Button
                android:id="@+id/Sign_up_btn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_49sdp"
                android:text="Sign Up"
                android:textColor="@color/white"
                android:textSize="@dimen/_14sdp"
                android:textAllCaps="false"
                android:backgroundTint="@color/purple_700"
                android:textStyle="bold"/>
        </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="- or sign up with -"
        android:layout_gravity="center"
        android:textSize="@dimen/_15sdp"
        android:textColor="@color/textcl"
        android:layout_marginTop="@dimen/_10sdp"
        />
    <LinearLayout
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_55sdp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_40sdp"
            app:cardElevation="@dimen/_4sdp"
            app:cardBackgroundColor="@color/white"
            android:gravity="center"
            app:cardCornerRadius="@dimen/_5sdp"
            android:padding="@dimen/_11sdp"
            >
            <ImageView
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_40sdp"
                android:src="@drawable/img_1"
                android:layout_gravity="center"
                />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_40sdp"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="@dimen/_4sdp"
            android:gravity="center"
            android:layout_marginStart="@dimen/_11sdp"
            app:cardCornerRadius="@dimen/_5sdp"
            >
            <ImageView
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_40sdp"
                android:src="@drawable/fb"
                />
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>