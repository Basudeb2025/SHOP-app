<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".signI">

    <ImageView
        android:layout_width="@dimen/_91sdp"
        android:layout_height="@dimen/_91sdp"
        android:src="@drawable/shop"
        android:layout_marginTop="@dimen/_11sdp"
        android:layout_gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />
    <TextView
        android:layout_marginTop="@dimen/_51sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login to your Account"
        android:textSize="@dimen/_21sdp"
        android:textStyle="bold"
        android:textColor="@color/textcl"
        android:layout_marginStart="@dimen/_17sdp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_200sdp"
        android:layout_marginTop="@dimen/_11sdp"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        >
        <androidx.cardview.widget.CardView
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="match_parent"
            app:cardBackgroundColor="@color/white"
            android:layout_height="@dimen/_45sdp"
            app:cardCornerRadius="@dimen/_8sdp"
            app:cardElevation="@dimen/_11sdp"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_6sdp"
            >
            <EditText
                android:id="@+id/Email_sign_in"
                android:inputType="textEmailAddress"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:paddingLeft="@dimen/_11sdp"
                android:layout_gravity="center"
                android:hint="Email"
                android:textColor="@color/black"
                android:textColorHint="@color/Dark_grey"
                android:background="@android:color/transparent"
                />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            app:cardCornerRadius="@dimen/_8sdp"
            app:cardElevation="@dimen/_11sdp"
            app:cardBackgroundColor="@color/white"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_6sdp"
            >
            <EditText
                android:id="@+id/Password_sign_in"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:paddingLeft="@dimen/_11sdp"
                android:inputType="textPassword"
                android:layout_gravity="center"
                android:hint="Password"
                android:textColorHint="@color/Dark_grey"
                android:textColor="@color/black"
                android:background="@android:color/transparent"
                />
        </androidx.cardview.widget.CardView>
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_90sdp"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/warning"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*Please Enter the details"
                android:textSize="@dimen/_11sdp"
                android:layout_marginStart="@dimen/_14sdp"
                android:textStyle="bold"
                android:textColor="@android:color/holo_red_dark"
                />
        <androidx.cardview.widget.CardView
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_49sdp"
            app:cardCornerRadius="@dimen/_8sdp"
            app:cardBackgroundColor="@color/purple_700"
            app:cardElevation="@dimen/_11sdp"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_6sdp"
            >
            <Button
                android:id="@+id/Sign_in_btn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_49sdp"
                android:text="Sign in"
                android:backgroundTint="@color/purple_700"
                android:textSize="@dimen/_14sdp"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:textStyle="bold"/>
        </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/forgetpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Forget password"
        android:textColor="@color/purple_700"
        android:textSize="@dimen/_13sdp"
        android:gravity="center"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="- or sign in with -"
        android:layout_gravity="center"
        android:textSize="@dimen/_15sdp"
        android:textColor="@color/textcl"
        android:layout_marginTop="@dimen/_1sdp"
        />
    <LinearLayout
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_55sdp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_40sdp"
            app:cardElevation="@dimen/_4sdp"
            android:gravity="center"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="@dimen/_5sdp"
            android:padding="@dimen/_11sdp"
            >
            <ImageView
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_40sdp"
                android:src="@drawable/img_1"
                android:layout_gravity="center"
                />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_40sdp"
            app:cardElevation="@dimen/_4sdp"
            android:gravity="center"
            app:cardBackgroundColor="@color/white"
            android:layout_marginStart="@dimen/_11sdp"
            app:cardCornerRadius="@dimen/_5sdp"
            >
            <ImageView
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_40sdp"
                android:src="@drawable/fb"
                />
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/_16sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Don't have an account?"
            android:textSize="@dimen/_16sdp"
            android:textColor="@color/textcl"
            />
        <TextView
            android:id="@+id/page_sign_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign up"
            android:textStyle="bold"
            android:textColor="@color/purple_700"
            android:textSize="@dimen/_16sdp"
            />
    </LinearLayout>
</LinearLayout>