<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_200sdp"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="@dimen/_200sdp"
       android:orientation="horizontal"
      >
      <androidx.cardview.widget.CardView
          android:layout_marginTop="@dimen/_5sdp"
          android:layout_marginStart="@dimen/_3sdp"
          android:layout_width="@dimen/_151sdp"
          android:layout_height="@dimen/_191sdp"
          app:cardMaxElevation="@dimen/_8sdp"
          android:layout_marginBottom="@dimen/_5sdp"
          app:cardCornerRadius="@dimen/_5sdp"
         >
         <LinearLayout
             android:id="@+id/lay1"
             android:layout_width="match_parent"
             android:layout_height="@dimen/_191sdp"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/item1"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="203dp"
                android:src="@drawable/img_18" />
            <TextView
                android:id="@+id/item1name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name1"
                android:gravity="center"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/item1price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="$230"
                android:gravity="center"
                android:textSize="@dimen/_11sdp"
                android:textStyle="italic"
                android:textColor="@color/black"
                />
         </LinearLayout>
      </androidx.cardview.widget.CardView>
         <androidx.cardview.widget.CardView
             android:layout_marginTop="@dimen/_5sdp"
             android:layout_marginStart="@dimen/_5sdp"
             android:layout_width="@dimen/_151sdp"
             android:layout_height="@dimen/_191sdp"
             app:cardMaxElevation="@dimen/_8sdp"
             app:cardCornerRadius="@dimen/_5sdp"
             >
            <LinearLayout
                android:id="@+id/lay2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_191sdp"
                android:orientation="vertical"
                >

               <ImageView
                   android:id="@+id/item2"
                   android:layout_width="@dimen/_150sdp"
                   android:layout_height="203dp"
                   android:src="@drawable/img_18" />
               <TextView
                   android:id="@+id/item2name"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="Name1"
                   android:gravity="center"
                   android:textSize="@dimen/_15sdp"
                   android:textStyle="bold"
                   android:textColor="@color/black"
                   />
               <TextView
                   android:id="@+id/item2price"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="$230"
                   android:gravity="center"
                   android:textSize="@dimen/_11sdp"
                   android:textColor="@color/black"
                   />
            </LinearLayout>

      </androidx.cardview.widget.CardView>

   </LinearLayout>
</LinearLayout>