<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".yoursale">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_51sdp"
        android:background="@color/sky"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/welcome"
            android:layout_width="@dimen/_61sdp"
            android:layout_height="@dimen/_51sdp"
            android:src="@drawable/shop"
            android:textSize="@dimen/_21sdp"
            android:textColor="@color/white"
            android:layout_marginStart="@dimen/_11sdp"
            android:textStyle="bold"
            />
        <TextView
            android:layout_marginStart="@dimen/_11sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SHOP"
            android:textSize="@dimen/_35sdp"
            android:textColor="@color/black"
            android:textStyle="bold"
            />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your product list"
        android:textSize="@dimen/_21sdp"
        android:textStyle="italic"
        android:textColor="@color/black"
        android:layout_marginStart="@dimen/_11sdp"
        />
    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:listitem="@layout/orderlist"
            />
        <TextView
            android:id="@+id/orderlistText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Your order list is Empty"
            android:textSize="@dimen/_21sdp"
            android:textStyle="bold"
            android:gravity="center"
            />
        <RelativeLayout
            android:backgroundTint="@color/white"
            android:id="@+id/loadingOverlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#80000000">

            <ProgressBar
                android:id="@+id/loadingProgressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true" />

        </RelativeLayout>
    </FrameLayout>
</LinearLayout>